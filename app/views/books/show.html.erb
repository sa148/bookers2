<div class="container">
  <div class="row">
    <div class="col-md-3">
<h2>User info</h2>
<table width="220">
  <tbody>
    <tr>
      <th width="30%">name</th>
      <th width="30%"><%= @user.name %></th>
      <%= image_tag @user.get_profile_image(100,100) %>
    </tr>
    <tr>
      <th>introduction</th>
      <th></th>
    </tr>
   </tbody>
</table>
<%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
<i class="fas fa-user-cog"></i>
<% end %>
<h2>New book</h2>

<%= form_with model: @book do |f| %>
<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :opnion %><br>
  <%= f.text_area :Opnion %>
</div>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>
<h2>Book detail</h2>
<div class="col-md-8 offset-md-1">
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opnion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%=@book_mybook.title%></td>
      <td><%=@book_mybook.body%></td>
      <td><%= link_to "edit", edit_book_path(@book_mybook.id), class: "btn btn-success"%></td>
      <% if @user == current_user %>
      <td><%= link_to "destroy", book_path(@book_mybook.id), class: "btn btn-sm btn-danger", method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>
 </div>
