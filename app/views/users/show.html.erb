<titile>New book</titile>

<%= form_with model: @book do |f| %>
<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :opnion %><br>
  <%= f.text_area :Opnion %>
</div>
  <%= f.submit 'Create Book' %>
<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opnion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%=book.Title%></td>
      <td><%=book.Opnion%></td>
      <td><%=link_to "Edit", edit_book_path(book)%></td>
      <td><%=link_to "Destroy", book_path(book),method: :delete, "data-confirm" => "Are you sure?"%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>


