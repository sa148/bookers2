<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

<h2>User info</h2>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
      <%= image_tag @user.get_profile_image(100,100) %>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction%></th>
    </tr>
   </tbody>
</table>
<%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
<i class="fas fa-user-cog"></i>
<% end %>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :opnion %><br>
  <%= f.text_area :body %>
</div>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
</div>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opnion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
    <td><%= image_tag @user.get_profile_image(100,100) %><%= link_to @user.name, user_path(@user.id)%></td>
    <td><%= link_to book.title, book_path(book.id)%></td>
    <td><%=book.body%></td>
    <% end %>
    </tr>
  </tbody>
</table>
</div>
  </div>
   </div>
     </div>
<% end %>


